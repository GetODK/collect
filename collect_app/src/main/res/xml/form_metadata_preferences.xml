<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/form_metadata">
        <EditTextPreference
            android:id="@+id/metadata_username"
            android:inputType="textNoSuggestions"
            android:key="username"
            android:title="@string/username" />
        <EditTextPreference
            android:id="@+id/metadata_phone_number"
            android:inputType="phone"
            android:key="phone_number"
            android:title="@string/phone_number" />
        <EditTextPreference
            android:id="@+id/metadata_email"
            android:inputType="textEmailAddress"
            android:key="email"
            android:title="@string/email" />
        <EditTextPreference
            android:id="@+id/device_id"
            android:editable="false"
            android:key="device_id"
            android:title="@string/device_id" />
        <EditTextPreference
            android:id="@+id/subscriber_id"
            android:editable="false"
            android:key="subscriber_id"
            android:title="@string/subscriber_id" />
        <EditTextPreference
            android:id="@+id/sim_serial_id"
            android:editable="false"
            android:key="sim_serial_id"
            android:title="@string/sim_serial_id" />
    </PreferenceCategory>
</PreferenceScreen>