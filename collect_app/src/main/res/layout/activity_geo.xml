<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="org.odk.collect.android.location.GeoViewModel" />

        <import type="org.odk.collect.android.location.GeoMode" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF000000"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="0dip">

            <TextView
                android:id="@+id/location_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:textColor="#FFFFFF"
                app:geoMode="@{viewModel.mode}"
                tools:text="@string/geopoint_instruction" />

            <TextView
                android:id="@+id/location_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:text="@string/please_wait_long"
                android:textColor="#FFFFFF"
                android:visibility="@{viewModel.status != null}"
                tools:visibility="visible" />

            <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mapReadyListener="@{viewModel}" />
        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingBottom="10dip"
            android:paddingTop="50dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/reload_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@drawable/ic_add_location_black_36dp"
                    android:visibility="@{viewModel.mode != GeoMode.SHAPE}"
                    android:onClick="@{() -> viewModel.onReloadLocation()}"
                    tools:visibility="visible" />

                <ImageButton
                    android:id="@+id/show_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@drawable/ic_my_location_black_36dp"
                    android:onClick="@{() -> viewModel.onShowLocation()}" />

                <ImageButton
                    android:id="@+id/layer_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@drawable/ic_layers_black_36dp"
                    android:onClick="@{() -> viewModel.onShowLayers()}" />

                <ImageButton
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_delete_black_36dp"
                    android:onClick="@{() -> viewModel.onClear()}" />

                <ImageButton
                    android:id="@+id/accept_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:src="@drawable/ic_save_black_36dp"
                    android:onClick="@{() -> viewModel.onAcceptLocation()}" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>
