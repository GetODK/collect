<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center" >

       <Button
           android:id="@+id/day_up_button"
           android:layout_width="30sp"
           android:layout_height="25sp"
           android:background="@drawable/date_button_top"
           android:text="@string/plus"
           android:textSize="21sp"
           android:padding="2dp"
           android:textColor="#666"/>

       <TextView
           android:id="@+id/day_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/day_up_button"
           android:background="@drawable/date_edit"
           android:gravity="center"
           android:padding="3dp"
           android:textSize="21sp" />

       <Button
           android:id="@+id/day_down_button"
           android:layout_width="30sp"
           android:layout_height="25sp"
           android:layout_below="@id/day_text"
           android:background="@drawable/date_button_bottom"
           android:text="@string/minus"
           android:padding="2dp"
           android:textSize="21sp"
           android:textColor="#666" />

       <Button
           android:id="@+id/month_up_button"
           android:layout_width="100sp"
           android:layout_height="25sp"
           android:layout_marginLeft="5dp"
           android:layout_marginStart="5dp"
           android:layout_toRightOf="@id/day_up_button"
           android:layout_toEndOf="@id/day_up_button"
           android:background="@drawable/date_button_top"
           android:text="@string/plus"
           android:padding="2dp"
           android:textSize="21sp"
           android:textColor="#666" />

       <TextView
           android:id="@+id/month_txt"
           android:layout_width="100sp"
           android:layout_height="wrap_content"
           android:layout_below="@id/month_up_button"
           android:layout_marginLeft="5dp"
           android:layout_marginStart="5dp"
           android:layout_toRightOf="@id/day_text"
           android:layout_toEndOf="@id/day_text"
           android:background="@drawable/date_edit"
           android:gravity="center"
           android:padding="3dp"
           android:textSize="21sp" />

       <Button
           android:id="@+id/month_down_button"
           android:layout_width="100sp"
           android:layout_height="25sp"
           android:layout_below="@id/month_txt"
           android:layout_marginStart="5dp"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@id/day_down_button"
           android:layout_toEndOf="@id/day_down_button"
           android:background="@drawable/date_button_bottom"
           android:text="@string/minus"
           android:padding="2dp"
           android:textSize="21sp"
           android:textColor="#666" />

       <Button
           android:id="@+id/year_up_button"
           android:layout_width="55sp"
           android:layout_height="25sp"
           android:layout_marginLeft="5dp"
           android:layout_marginStart="5dp"
           android:layout_toRightOf="@id/month_up_button"
           android:layout_toEndOf="@id/month_up_button"
           android:background="@drawable/date_button_top"
           android:text="@string/plus"
           android:padding="2dp"
           android:textSize="21sp"
           android:textColor="#666"/>

       <TextView
           android:id="@+id/year_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/year_up_button"
           android:layout_marginLeft="5dp"
           android:layout_marginStart="5dp"
           android:layout_toRightOf="@id/month_txt"
           android:layout_toEndOf="@id/month_txt"
           android:background="@drawable/date_edit"
           android:gravity="center"
           android:padding="3dp"
           android:textSize="21sp" />

       <Button
           android:id="@+id/year_down_button"
           android:layout_width="55sp"
           android:layout_height="25sp"
           android:layout_below="@id/year_txt"
           android:layout_marginLeft="5dp"
           android:layout_marginStart="5dp"
           android:layout_toRightOf="@id/month_down_button"
           android:layout_toEndOf="@id/month_down_button"
           android:background="@drawable/date_button_bottom"
           android:text="@string/minus"
           android:padding="2dp"
           android:textSize="21sp"
           android:textColor="#666" />
   </RelativeLayout>

   <TextView
       android:id="@+id/date_gregorian"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:gravity="center"
       android:textSize="15sp" />
</LinearLayout>