<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_small">

    <org.odk.collect.android.formentry.questions.AudioVideoImageTextLabel
        android:id="@+id/question_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/center"
        tools:ignore="RtlHardcoded" />

    <FrameLayout
        android:id="@+id/help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_label"
        android:orientation="vertical">

        <include layout="@layout/help_layout" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/answer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/center"
        android:gravity="end"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/error_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginVertical="@dimen/margin_standard"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/help_text"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/required_error_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_error_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_standard"
            android:textColor="?colorError"
            android:layout_gravity="center_vertical"
            style="@style/TextAppearance.Collect.Subtitle1"
            tools:text="@string/required_answer_error"/>
    </LinearLayout>
</RelativeLayout>