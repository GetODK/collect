<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_small"
    android:orientation="vertical">

    <org.odk.collect.android.formentry.questions.AudioVideoImageTextLabel
        android:id="@+id/question_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/help_layout" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/answer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/error_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginVertical="@dimen/margin_standard"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_error_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:textColor="?colorError"
            android:text="@string/required_answer_error"
            android:layout_gravity="center_vertical"
            style="@style/TextAppearance.Collect.Subtitle1"
            tools:text="@string/required_answer_error"/>
    </LinearLayout>
</LinearLayout>