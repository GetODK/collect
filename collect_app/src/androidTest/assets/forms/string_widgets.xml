<?xml version="1.0" encoding="UTF-8"?>
<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>stringWidgets</h:title>
        <model>
            <instance>
                <stringWidgets id="stringWidgets">
                    <q1 />
                    <q2 />
                    <q3 />
                    <q4 />
                    <q5 />
                    <q6 />
                    <q7 />
                    <q8 />
                    <q9 />
                    <q10 />
                    <q11 />
                    <q12 />
                    <meta>
                        <instanceID />
                    </meta>
                </stringWidgets>
            </instance>
            <bind nodeset="/stringWidgets/q1" type="string" />
            <bind nodeset="/stringWidgets/q2" type="int" />
            <bind nodeset="/stringWidgets/q3" type="int" />
            <bind nodeset="/stringWidgets/q4" type="decimal" />
            <bind nodeset="/stringWidgets/q5" type="decimal" />
            <bind nodeset="/stringWidgets/q6" type="string" />
            <bind nodeset="/stringWidgets/q7" type="string" />
            <bind nodeset="/stringWidgets/q8" type="string" />
            <bind nodeset="/stringWidgets/q9" type="int" />
            <bind nodeset="/stringWidgets/q10" type="int" />
            <bind nodeset="/stringWidgets/q11" type="decimal" />
            <bind nodeset="/stringWidgets/q12" type="decimal" />
            <bind jr:preload="uid" nodeset="/stringWidgets/meta/instanceID" readonly="true()" type="string" />
        </model>
    </h:head>
    <h:body>
        <input ref="/stringWidgets/q1">
            <label>StringWidget</label>
        </input>
        <input ref="/stringWidgets/q2">
            <label>IntegerWidget</label>
        </input>
        <input appearance="thousands-sep" ref="/stringWidgets/q3">
            <label>IntegerWidget – thousands-sep</label>
        </input>
        <input ref="/stringWidgets/q4">
            <label>DecimalWidget</label>
        </input>
        <input appearance="thousands-sep" ref="/stringWidgets/q5">
            <label>DecimalWidget – thousands-sep</label>
        </input>
        <input appearance="numbers" ref="/stringWidgets/q6">
            <label>StringNumberWidget</label>
        </input>
        <input appearance="numbers thousands-sep" ref="/stringWidgets/q7">
            <label>StringNumberWidget – thousands-sep</label>
        </input>
        <input appearance="ex:org.opendatakit.counter(form_id='counter-form', form_name='Counter Form', question_id='1', question_name='Counter 1', increment=true())" ref="/stringWidgets/q8">
            <label>ExStringWidget</label>
        </input>
        <input appearance="ex:org.opendatakit.counter(form_id='counter-form', form_name='Counter Form', question_id='1', question_name='Counter 1', increment=true())" ref="/stringWidgets/q9">
            <label>ExIntegerWidget</label>
        </input>
        <input appearance="ex:org.opendatakit.counter(form_id='counter-form', form_name='Counter Form', question_id='1', question_name='Counter 1', increment=true()) thousands-sep" ref="/stringWidgets/q10">
            <label>ExIntegerWidget – thousands-sep</label>
        </input>
        <input appearance="ex:org.opendatakit.counter(form_id='counter-form', form_name='Counter Form', question_id='1', question_name='Counter 1', increment=true())" ref="/stringWidgets/q11">
            <label>ExDecimalWidget</label>
        </input>
        <input appearance="ex:org.opendatakit.counter(form_id='counter-form', form_name='Counter Form', question_id='1', question_name='Counter 1', increment=true()) thousands-sep" ref="/stringWidgets/q12">
            <label>ExDecimalWidget – thousands-sep</label>
        </input>
    </h:body>
</h:html>